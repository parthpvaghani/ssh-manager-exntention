{
    "name": "ssh-connection-manager",
    "displayName": "GitHub SSH User Switcher",
    "description": "Easily switch between multiple GitHub SSH identities and ensure correct commit authorship. Works in VSCode and Cursor.",
    "version": "1.0.0",
    "publisher": "parthvaghani",
    "author": {
      "name": "parthvaghani"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/parthvaghani/github-ssh-user-switcher"
    },
    "icon": "icon.png",
    "keywords": [
      "ssh",
      "github",
      "identity",
      "switch",
      "user",
      "git",
      "cursor",
      "vscode"
    ],
    "engines": {
      "vscode": "^1.74.0"
    },
    "categories": [
      "Other"
    ],
    "activationEvents": [
      "onCommand:ssh-manager.showConnections",
      "onCommand:ssh-manager.addConnection",
      "onCommand:ssh-manager.connectToHost",
      "onCommand:ssh-manager.deleteConnection",
      "onCommand:ssh-manager.editConnection"
    ],
    "main": "./out/extension.js",
    "contributes": {
      "commands": [
        {
          "command": "ssh-manager.showConnections",
          "title": "Show SSH Connections",
          "category": "SSH Manager"
        },
        {
          "command": "ssh-manager.addConnection",
          "title": "Add SSH Connection",
          "category": "SSH Manager"
        },
        {
          "command": "ssh-manager.connectToHost",
          "title": "Connect to SSH Host",
          "category": "SSH Manager"
        },
        {
          "command": "ssh-manager.deleteConnection",
          "title": "Delete SSH Connection",
          "category": "SSH Manager"
        },
        {
          "command": "ssh-manager.editConnection",
          "title": "Edit SSH Connection",
          "category": "SSH Manager"
        },
        {
          "command": "ssh-manager.setActiveGitHubIdentity",
          "title": "Set as Active for GitHub",
          "when": "view == ssh-connections && viewItem == sshConnection",
          "group": "inline"
        }
      ],
      "viewsContainers": {
        "activitybar": [
          {
            "id": "ssh-manager",
            "title": "SSH Manager",
            "icon": "$(terminal)"
          }
        ]
      },
      "views": {
        "ssh-manager": [
          {
            "id": "ssh-connections",
            "name": "SSH Connections",
            "when": "true"
          }
        ]
      },
      "menus": {
        "view/title": [
          {
            "command": "ssh-manager.addConnection",
            "when": "view == ssh-connections",
            "group": "navigation"
          }
        ],
        "view/item/context": [
          {
            "command": "ssh-manager.connectToHost",
            "when": "view == ssh-connections && viewItem == sshConnection",
            "group": "inline"
          },
          {
            "command": "ssh-manager.editConnection",
            "when": "view == ssh-connections && viewItem == sshConnection",
            "group": "edit"
          },
          {
            "command": "ssh-manager.deleteConnection",
            "when": "view == ssh-connections && viewItem == sshConnection",
            "group": "edit"
          }
        ]
      }
    },
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
      "@types/vscode": "^1.74.0",
      "@types/node": "16.x",
      "typescript": "^4.9.4"
    }
  }